<section class="pt-7 pt-md-10">
	<div class="container">
		<div class="row align-items-center mb-5">
			<div
				class="col-12 col-md">

				<!-- Heading -->
				<h3 class="mb-0">
					Nouveaut√©s
				</h3>

				<!-- Text -->
				<p class="mb-0 text-muted">
					Les derniers PC fixes et portables sont disponibles ici avec un panel de choix qui satisfera tous les utilisateurs.

				</p>

			</div>
			<div
				class="col-12 col-md-auto">

				<!-- Button -->
				<a href="#!" class="btn btn-sm btn-outline-gray-300 d-none d-md-inline">
					View all
				</a>

			</div>
		</div>
		<!-- / .row -->
		<div class="row">

			{% for article in articles %}
				<div
					class="col-12 col-md-6 col-lg-4 d-flex">

					<!-- Card -->
					<div
						class="card mb-6 mb-lg-0 shadow-light-lg lift lift-lg" data-aos="fade-up" data-delay="100">

						<!-- Image -->
						<a
							class="card-img-top" href="">


							<!-- Image -->
							<img
							src="{{ vich_uploader_asset(article, 'imageFile') }}" class="card-img-top" alt="{{ article.title }}">


							<!-- Shape -->
							<div class="position-relative">
								<div class="shape shape-bottom shape-fluid-x text-white">
									<svg viewbox="0 0 2880 480" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M2160 0C1440 240 720 240 720 240H0v240h2880V0h-720z" fill="currentColor"/></svg>
								</div>
							</div>

						</a>

						<!-- Body -->
						<a
							class="card-body" href="">


							<!-- Heading -->
							<h3>
								{{article.title }}

							</h3>

							<!-- Text -->
							<p class="mb-0 text-muted">
								{{ article.description|u.truncate(200, '...', false)|striptags}}</p>


						</a>

						<!-- Meta -->
						<a
							class="card-meta mt-auto" href="">


							<!-- Divider -->
							<hr
							class="card-meta-divider">

							<!-- Avatar -->
							<div class="avatar avatar-sm me-2">
								<img src="assets/img/avatars/avatar-1.jpg" alt="..." class="avatar-img rounded-circle">
							</div>

							<!-- Author -->
							<h6 class="text-uppercase text-muted me-2 mb-0">
								Ab Hadley
							</h6>

							<!-- Date -->
							<p class="h6 text-uppercase text-muted mb-0 ms-auto">
								<time datetime="2019-05-02">May 02</time>
							</p>

						</a>

					</div>

				</div>


			{% endfor %}

			<!-- / .row -->
		</div>
		<!-- / .container -->
	</section>
