<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1"/>

		<title>
			{% block title %}
				Mot de passe oublié
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																																																																																																																																																																						and uncomment the following Encore helpers to start using Symfony UX #}
		<!-- CSS only -->
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

	</head>
	<body>

		<!-- CONTENT -->
		<section>
			<div class="container d-flex flex-column">
				<div class="row align-items-center justify-content-center gx-0 min-vh-100">
					<div class="col-12 col-md-6 col-lg-4 py-8 py-md-11">
						{% for message in app.flashes('notice') %}
							<div class="alert alert-info">{{message}}</div>
						{% endfor %}

						<!-- Heading -->
						<h2 class="mb-0 fw-bold">
							Réinitialiser mon mot de passe
						</h2>


						<!-- Form -->
						<form method="post">


							<label for="inputEmail">Votre émail</label>
							<input type="email" name="email" id="inputEmail" class="form-control" placeholder="Votre émail" required autofucus>

							<button class="btn btn-lg btn-primary mt-5" type="submit">
								Valider
							</button>
						</form><!--Text--><pclass="mb-0fs-smtext-muted">
							Ou souhaitez-vous
							<a href="{{path('app_login')}}">Se connecter?</a>.
						</p>

					</div>
					<div
						class="col-lg-7 offset-lg-1 align-self-stretch d-none d-lg-block" data-aos="fade-left">

						<!-- Image -->
						<div class="h-100 w-cover bg-cover" style="background-image: url(/img/cover-14.jpg);"></div>

						<!-- Shape -->
						<div class="shape shape-start shape-fluid-y text-white">
							<svg viewbox="0 0 100 1544" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 0h100v386l-50 772v386H0V0z" fill="currentColor"/></svg>
						</div>

					</div>
				</div>
				<!-- / .row -->
			</div>
			<!-- / .container -->
		</body>
	</body>
</html></section>{% block javascripts %}
{{ encore_entry_script_tags('app') }}{% endblock %}</body></html>
